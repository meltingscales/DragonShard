FROM node:16-alpine

# Install dependencies
RUN apk add --no-cache curl

# Create app directory
WORKDIR /usr/src/app

# Copy package files
COPY vuln-node/package*.json ./

# Install dependencies
RUN npm install

# Copy vulnerable Node.js application
COPY vuln-node/ .

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "start"] 